<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ccc" />

            <EditText
                android:id="@+id/edt_username"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ชื่อผู้ใช้งาน" />

            <EditText
                android:id="@+id/edt_name"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ชื่อ" />

            <EditText
                android:id="@+id/edt_surname"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="นานสกุล" />

            <EditText
                android:id="@+id/edt_idcard"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="เลขบัตรประจำตัวประชาชน" />

            <EditText
                android:id="@+id/edt_tel"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="เบอร์โทร" />

            <EditText
                android:id="@+id/edt_house"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="บ้านเลขที่" />

            <EditText
                android:id="@+id/edt_province"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="จังหวัด" />

            <EditText
                android:id="@+id/edt_district"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="อำเภอ" />

            <EditText
                android:id="@+id/edt_subdistrict"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ตำบล" />

            <EditText
                android:id="@+id/edt_postalcode"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="รหัสไปรษณีย์" />

            <EditText
                android:id="@+id/edt_password"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="รหัสผ่าน" />

            <EditText
                android:id="@+id/edt_repassword"
                style="@style/EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ยืนยันรหัสผ่าน" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bt_confirm"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@color/design_default_color_secondary"
                    android:text="ยืนยัน" />

                <Button
                    android:id="@+id/bt_cancel"
                    android:text="ยกเลิก"
                    android:layout_marginLeft="10dp"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@color/design_default_color_secondary" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>